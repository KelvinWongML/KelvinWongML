    <script>
        var data = {
            fname:'',
            lname:'',
            age:'',
            gender:'customer',
            gmail:''
        };
        function InputData(){
            data.fname = document.getElementById('FN').value;
            data.lname = document.getElementById('LN').value;
            data.age = document.getElementById('A').value;
            if (document.getElementById('GE').value == 'Male'){data.gender = 'Mr.'};
            if (document.getElementById('GE').value == 'Female'){data.gender = 'Ms.'};
            data.gmail = document.getElementById('GM').value;
        };
        window.onclick = function(event) {
            if (event.target == document.getElementById('id1')) {
                document.getElementById('id1').style.display = "none";
            }
        }
        function OClist(){
            if(document.getElementById('list').style.display=='none'){
                document.getElementById('list').style.display='block';
            }else{
                document.getElementById('list').style.display='none';
            }
        }
    </script>
